!URxvt*font:     xft:tewi:size=14
!URxvt*boldFont: xft:tewi:bold:size=14
!URxvt*font:     xft:Terminus:size=12
!URxvt*boldFont: xft:Terminus:bold:size=12
!URxvt*font:     xft:ProFont:size=13
!URxvt*boldFont: xft:ProFont:size=13
!URxvt*font:     xft:dina:size=14
URxvt*font:      xft:GohuFont:size=14
URxvt*boldFont:  xft:GohuFont:size=14
!URxvt.font:     xft:lemon:size=13

#include ".config/palettes/pepper.Xresources"

*foreground:   base07
*background:   base00
*cursorColor:  base07

*color0:       base00
*color1:       base08
*color2:       base0B
*color3:       base0A
*color4:       base0D
*color5:       base0E
*color6:       base0C
*color7:       base05

*color8:       base03
*color9:       base09
*color10:      base01
*color11:      base02
*color12:      base04
*color13:      base06
*color14:      base0F
*color15:      base07

!URxvt SETTINGS
!URxvt*dynamicColors: on
URxvt.internalBorder      : 34
URxvt.geometry            : 70x35
!URxvt.thickness           : 5
URxvt*lineSpace: 2
URxvt*scrollBar: false
URxvt*saveLines: 1000
URxvt*cursorUnderline: false
URxvt*cursorBlink: true

! transparency
!URxvt.transparent: true
!URxvt*tintColor: #ffffff
!URxvt.shading: 40
!URxvt.blurRadius: 40
!URxvt*blurRadius: 5
!URxvt.transparent:   true
!URxvt*tintColor: #ffffff
!URxvt.shading:       15

!URxvt plugins
URxvt*perl-lib: /usr/lib/urxvt/perl/
URxvt.perl-ext-common: default,matcher,keyboard-select,resize-font
URxvt.url-launcher: /usr/bin/chromium
URxvt.matcher.button: 1
URxvt.matcher.rend.0: Uline Bold fg5
URxvt.keysym.M-Delete: perl:matcher:list
URxvt.keysym.M-Escape: perl:keyboard-select:activate
